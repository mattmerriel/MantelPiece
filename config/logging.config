version: 1
formatters:
  basic:
    format: '%(asctime)s - %(name)s - %(levelname)s - %(message)s'
handlers:
  console:
    class: logging.StreamHandler
    level: INFO
    formatter: basic
    stream: ext://sys.stdout
  file:
    class: logging.handlers.RotatingFileHandler
    level: DEBUG
    formatter: basic
    filename: logs/logging.log
    mode: a
    maxBytes: 1024
    backupCount: 1
    encoding: utf-8
loggers:
  main:
    level: DEBUG
    handlers: [console, file]
    propagate: no